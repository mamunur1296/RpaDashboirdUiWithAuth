@model UserInterface.Application.Models.ApplicationUser

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="header-icon">
            <i class="fa fa-users"></i>
        </div>
        <div class="header-title">
            <h1>Application Users</h1>
            <small>Users List</small>
        </div>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-lg-12 pinpin">
                <div class="card lobicard" data-sortable="true">
                    <div class="card-header">
                        <div class="card-title custom_title">
                            <h4>Add Users</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="btn-group d-flex" role="group">
                            <div class="buttonexport" id="btn-Create">
                                <a class="btn text-white btn-add" data-toggle="modal" data-target="#ModelCreateAndEdit">
                                    <i class="fa fa-plus"></i> Add Users
                                </a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="UsersDataTable" class="table table-bordered table-striped table-hover">
                                <thead class="back_table_color">
                                    <tr class="info">
                                        <th>Full Name</th>
                                        <th>User Name</th>
                                        <th>Email</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <!-- Load Table Body from Jquery src="~/js/authentication/applicationusers.js" -->
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    
</div>




































<!-- Customer Modal1 -->
<div class="modal fade" id="ModelCreateAndEdit" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header modal-header-primary">
                <h3><i class="fa fa-user m-r-5"></i> Update Customer</h3>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form id="createAndUpdateForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-4 form-group">
                                    <label asp-for="FullName" class="control-label">Full Name</label>
                                    <input asp-for="FullName" placeholder="Customer Name" class="form-control" name="FullName" id="FullName" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 form-group">
                                    <label asp-for="UserName" class="control-label">User Name</label>
                                    <input asp-for="UserName" placeholder="User Name" class="form-control" name="UserName" id="UserName" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 form-group">
                                    <label asp-for="Email" class="control-label">Email</label>
                                    <input asp-for="Email" placeholder="Enter Email" class="form-control" name="Email" id="Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label asp-for="Password" class="control-label">Password</label>
                                    <input asp-for="Password" placeholder="Enter Password" class="form-control" name="Password" id="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label asp-for="ConfirmationPassword" class="control-label">Confirm Password</label>
                                    <input asp-for="ConfirmationPassword" placeholder="Confirm Password" class="form-control" name="ConfirmationPassword" id="ConfirmationPassword" />
                                    <span asp-validation-for="ConfirmationPassword" class="text-danger"></span>
                                </div>
                                <div class="col-md-12 form-group user-form-group">
                                    <div class="float-right">
                                        <button data-dismiss="modal" class="btn btn-danger btn-sm">Cancel</button>
                                        <button id="btnSave" type="submit"  class="btn btn-add btn-sm">Save</button>
                                        <button id="btnUpdate" type="submit" class="btn btn-add btn-sm">Update</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Customer Modal2 -->
<div class="modal fade" id="DeleteModel" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header modal-header-primary">
                <h3><i class="fa fa-user m-r-5"></i> Delete Customer</h3>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div id="deleteForm" class="form-horizontal">
                            <div class="row">
                                <div class="col-md-12 form-group user-form-group">
                                    <label class="control-label">Delete Customer</label>
                                    <div class="float-right">
                                        <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">NO</button>
                                        <button type="button" id="btnDelete" class="btn btn-add btn-sm">YES</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/authentication/applicationusers.js"></script>
    
}